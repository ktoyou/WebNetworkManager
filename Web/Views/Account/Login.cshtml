@model Web.Models.UserViewModel

<!DOCTYPE html>
<html lang="ru">
<head>
    <title>Авторизация</title>
    <link href="@Url.Content("~/css/site.css")" rel="stylesheet" type="text/css"/>
    <link href="@Url.Content("~/lib/bootstrap/dist/css/bootstrap.min.css")" rel="stylesheet" type="text/css"/>
</head>
<body>
<div class="d-flex align-items-center justify-content-center vh-100 flex-column">
    @using(Html.BeginForm("Login", "Account"))
    {
        <div class="d-flex justify-content-center vh-100 flex-column">
            <h1>Панель управления</h1>
            <div class="mb-3">
                <label class="form-label">Логин</label>
                @Html.TextBoxFor(Model => Model.Login, new {@class = "form-control"})
            </div>
            <div class="mb-3">
                <label class="form-label">Пароль</label>
                @Html.TextBoxFor(Model => Model.Password, new {@class="form-control", @type = "password"})
            </div>
            <button class="btn btn-primary mb-5" type="submit">Войти</button>
            @Html.ValidationMessageFor(Model => Model.Login, string.Empty, new {@class = "alert-danger"})
            @Html.ValidationMessageFor(Model => Model.Password, string.Empty, new {@class = "alert-danger"})
        </div>
    }
</div>
</body>
<script src="~/lib/jquery/dist/jquery.min.js"></script><!--подключение jquery-->
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
</html>